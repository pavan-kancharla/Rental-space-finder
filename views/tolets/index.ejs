<% layout('layouts/boilerplate') %> 
    <h1>ALL Tolets</h1>
    <div>
        <a href="/tolets/new">Add tolets</a>
    </div>
    
<% for(let tolet of Tolet){ %>
    <div class="card" mb-3>
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" alt="" src="<%= tolet.image  %> ">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= tolet.title %> </h5>
                    <p class="card-text"><%= tolet.description %> </p>
                    <p class="card-text">
                        <small class="text-muted"><%= tolet.location %> </small>
                    </p>
                    <a class="btn btn-primary" href="/tolets/<%= tolet._id %>">View</a>
                </div>
            </div>
        </div>
    </div>
    <% } %> 
    
